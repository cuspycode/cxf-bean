<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

  <display-name>Apache CXF Bean-example for plain Tomcat</display-name>

  <servlet>
    <servlet-name>cxfservlet</servlet-name>
    <servlet-class>org.apache.cxf.jaxrs.servlet.CXFNonSpringJaxrsServlet</servlet-class>
    <!-- CXF complains about missing resource classes if this is not present -->
    <init-param>
      <param-name>javax.ws.rs.Application</param-name>
      <param-value>com.cuspycode.cxfbean.DummyService</param-value>
    </init-param>
    <!-- This does not work for some reason, the provider must be set in cxf.xml instead -->
    <!--
    <init-param>
      <param-name>jaxrs.providers</param-name>
      <param-value>org.apache.johnzon.jaxrs.JohnzonProvider</param-value>
    </init-param>
    -->
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>cxfservlet</servlet-name>
    <url-pattern>/api/*</url-pattern>
  </servlet-mapping>

</web-app>
